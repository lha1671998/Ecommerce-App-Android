<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imghinh_ctsp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tensp_ctsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:textColor="#092CF1"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="BONG DEN LED"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/imghinh_ctsp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/giasp_ctsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:textColor="#EF063D"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="30000"
        app:layout_constraintStart_toEndOf="@+id/imghinh_ctsp"
        app:layout_constraintTop_toBottomOf="@+id/tensp_ctsp" />
</androidx.constraintlayout.widget.ConstraintLayout>